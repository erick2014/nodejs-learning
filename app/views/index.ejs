<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>O: <%= title %></title>
    <link rel="stylesheet" href="css/style.css"></link>

  </head>
  <body ng-app="meanApp">
    <img src="img/logo.jpg" alt="Logo">
    <div>O: <%= content %></div>
    <div ng-controller="UserCtrl">{{name}}</div>
    <!-- if the user is logged in show its name-->
    <% if( user ){ %>
      <a href="/signout">Sign out </a>
    <% }else{ %>
        <a href="/signin">Signin</a>
        <a href="/signup">Signout</a>
    <% } %>


    <section ng-view></section>

    <!--set the user object into window object -->
    <script type="text/javascript">
      window.user=<%- user || 'null' %>
    </script>


    <!-- load angular library -->
    <script type="text/javascript" src="lib/angular/angular.js"></script>
    <!-- load the ngroute library -->
    <script type="text/javascript" src="lib/angular-route/angular-route.js"></script>
    <!-- load example things -->
    <script type="text/javascript" src="/example/example.client.module.js"></script>
    <script type="text/javascript" src="/example/config/example.client.routes.js"></script>
    <script type="text/javascript" src="/example/controllers/example.client.controller.js"></script>

    <!-- load the users module-->
    <script type="text/javascript" src="/usersMod/users.client.module.js"></script>
    <!-- load the user's service-->
    <script type="text/javascript" src="/usersMod/services/authentication.client.service.js"></script>
     <!-- load the user's controller-->
    <script type="text/javascript" src="/usersMod/controllers/users.client.controller.js"></script>

    <!--load the main app-->
    <script type="text/javascript" src="/application.js"></script>


  </body>
</html>